programa {
	funcao inicio() {
		inteiro numero
		escreva ("digite o número: ")
		leia(numero)
		
		se (numero < 0)
		{ 
		escreva(" O número é negativo ")
		}
		senao se (numero == 0)
		{ 
		 escreva (" O número é nulo ")
		} 
		senao (numero > 0)
		{
		 escreva (" O numero é positivo ")
		}
		
	}
}
